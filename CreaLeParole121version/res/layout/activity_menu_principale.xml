    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo"
    tools:context="com.CreaLeParole.menu_principale"
    tools:ignore="MergeRootFrame" >

    <!-- INVITATION POPUP -->

    <GridLayout
        android:id="@+id/screen_menu_principale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:visibility="visible" >

        <GridLayout
            android:layout_gravity="fill_horizontal"
            android:columnCount="1" >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:layout_row="0"
                android:src="@drawable/separatore2" />

            <Button
                android:id="@+id/buttonImpostazioniMenuPrincipale"
                android:layout_width="50dp"
                android:layout_column="0"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:background="@drawable/button_impostazioni"
                android:fitsSystemWindows="true"
                android:maxWidth="64dp"
                android:minHeight="38dip" />

            <LinearLayout
                android:id="@+id/invitation_popup"
                style="@style/InvPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center_horizontal|top"
                android:layout_row="0"
                android:background="@drawable/popup_invito_partita"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/incoming_invitation_text"
                    style="@style/InvPopupText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_accept_popup_invitation"
                    style="@style/InvPopupButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottone_accetta_invito"
                    android:text="@string/accept_popup_invite"
                    android:textColor="#d9c5c5"
                    android:textStyle="bold" />

            </LinearLayout>

        </GridLayout>

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/buttonNuovaPartita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_nuova_partita"
                android:text="Inizia Una Nuova Partita"
                android:textColor="#f7f7ec"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_obiettivi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_obiettivi"
                android:text="Visualizza Obiettivi"
                android:textColor="#f7f7ec"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_statistiche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_statistiche"
                android:text="Visualizza Statistiche"
                android:textColor="#f7f7ec"
                android:textStyle="bold" />
        </LinearLayout>
    </GridLayout>

    <LinearLayout
        android:id="@+id/screen_wait"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <GridLayout
            android:id="@+id/GridLayout01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
