            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none|horizontal" >

            <LinearLayout
                android:id="@+id/LinearLayout04"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp" />

                <TextView
                    android:id="@+id/punt_turn1_gioc_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Ricerca partita in corso.."
                    android:textColor="#a59e8e"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/screen_ricerca_partite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sfondo"
        android:orientation="vertical"
        android:visibility="gone" >

        <GridLayout
            android:id="@+id/GridLayout04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ImageView06"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/separatore2" />
        </GridLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none|horizontal" >

