                    android:id="@+id/buttonPartitaCasuale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_finale_giallo"
                    android:text="Partita Casuale"
                    android:textColor="#f7f7ec"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/ButtonSfidaUnAmico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_finale_viola"
                    android:text="Sfida Un Amico"
                    android:textColor="#f7f7ec"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonVediGliInviti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_finale_celeste"
                    android:text="Vedi Gli Inviti"
                    android:textColor="#f7f7ec"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

