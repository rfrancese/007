                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_row="1"
                    android:background="@drawable/button_lettere2"
                    android:text="G" />

                <Button
                    android:id="@+id/H"
                    style="?android:attr/buttonStyleSmall"
