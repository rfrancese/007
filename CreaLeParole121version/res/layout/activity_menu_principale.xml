                    android:layout_gravity="left|top"
                    android:layout_row="1"
                    android:background="@drawable/button_lettere2"
                    android:text="I" />

                <Button
                    android:id="@+id/L"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
